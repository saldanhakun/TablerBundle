{
    "name": "saldanhakun/tabler-bundle",
    "type": "symfony-bundle",
    "description": "Admin/Backend theme bundle for Symfony based on Tabler.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcelo Saldanha",
            "homepage": "https://marcelosaldanha.com.br"
        },
        {
            "name": "Kevin Papst",
            "homepage": "https://www.kevinpapst.de"
        }
    ],
    "require": {
        "php": "^8.3",
        "symfony/asset": "^7.3",
        "symfony/config": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/event-dispatcher": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/options-resolver": "^7.3",
        "symfony/security-core": "^7.3",
        "symfony/translation": "^7.3",
        "symfony/twig-bridge": "^7.3",
        "twig/twig": "^3.21",
        "symfony/uid": "7.3.*",
        "symfonycasts/verify-email-bundle": "^1.17",
        "erusev/parsedown": "^1.7",
        "saldanhakun/doctrine-bundle": "^3.0",
        "symfony/mailer": "7.3.*",
        "saldanhakun/brazilian-validators": "1.3.3"
    },
    "require-dev": {
        "symfony/framework-bundle" : "^7.3",
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpunit/phpunit": "^12.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "knplabs/knp-menu-bundle": "^3.6",
        "vincentlanglet/twig-cs-fixer": "^3.9"
    },
    "suggest" : {
        "knplabs/knp-menu-bundle" : "Allows easy menu integration"
    },
    "autoload": {
        "psr-4": {
            "Saldanhakun\\TablerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Saldanhakun\\Tests\\TablerBundle\\": "tests/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit tests/",
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon src/ --level=5",
            "vendor/bin/phpstan analyse -c tests/phpstan.neon tests/ --level=5"
        ],
        "cs": [
            "vendor/bin/php-cs-fixer fix --dry-run --show-progress=bar --format=@auto,txt",
            "vendor/bin/twig-cs-fixer lint templates"
        ],
        "csfix": [
            "vendor/bin/php-cs-fixer fix --show-progress=bar --format=@auto,txt",
            "vendor/bin/twig-cs-fixer lint --fix templates"
        ],
        "csdebug": "vendor/bin/php-cs-fixer fix --dry-run"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*",
            "docker": false
        },
        "enable-patching": false
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true,
            "symfony/flex": true,
            "cweagans/composer-patches": false
        }
    }
}
