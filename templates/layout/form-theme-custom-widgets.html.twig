{% use 'bootstrap_5_horizontal_layout.html.twig' %}

{% block email_widget %}
    <div class="input-group input-group-flat">
        <span class="input-group-text text-faded">
            {{ tabler_icon('fa fa-at') }}
        </span>
        {{ parent() }}
        <span class="input-group-text">
            <a href="#" class="link-info js-email-input-send" data-no-bs-toggle="tooltip" title="Enviar mensagem para o e-mail" data-bs-original-title="Enviar mensagem para o e-mail">
                {{ tabler_icon('fa fa-envelope') }}
            </a>
        </span>
    </div>
{% endblock email_widget %}

{% block mobile_phone_widget %}
    {%- set attr = attr|merge({
        'data-mask': attr['data-mask']|default('(00) 90000-0000'),
    }) -%}
    <div class="input-group input-group-flat">
        <span class="input-group-text text-faded">
            {{ tabler_icon('fa fa-mobile') }}
        </span>
        {{ block('form_widget_simple') }}
        <span class="input-group-text">
            <a href="#" class="link-info js-mobile-input-chat" target="_blank" data-no-bs-toggle="tooltip" title="Conversar no Whatsapp" data-bs-original-title="Conversar no Whatsapp">
                {{ tabler_icon('fab fa-whatsapp') }}
            </a>
            <a href="#" class="link-info ms-2 js-mobile-input-call" target="_blank" data-no-bs-toggle="tooltip" title="Iniciar uma Chamada" data-bs-original-title="Iniciar uma Chamada">
                {{ tabler_icon('fa fa-phone') }}
            </a>
        </span>
    </div>
{% endblock mobile_phone_widget %}

