{% endblock phone_widget %}

{% block cpf_widget %}
    {%- set attr = attr|merge({
        'data-mask': attr['data-mask']|default('000.000.000-00'),
    }) -%}
    {% if not attr.disabled|default(false) and not attr.readonly|default(false) and access.dev %}
        <div class="input-group input-group-flat">
            <span class="input-group-text text-faded">
                {{ tabler_icon('fa fa-id-card') }}
            </span>
            {{ block('form_widget_simple') }}
            <span class="input-group-text">
                <a href="#" class="link-info ms-2 js-cpf-randomizer" data-remote="{{ router.dev.generateCpf }}" data-no-bs-toggle="tooltip" title="Gerar um número de CPF válido" data-bs-original-title="Gerar um número de CPF válido">
                    {{ tabler_icon('fa fa-cogs') }}
                </a>
            </span>
        </div>
    {% else %}
        {{ block('form_widget_simple') }}
    {% endif %}
{% endblock cpf_widget %}

