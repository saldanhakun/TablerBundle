<div class="{{ form_card_width|default('col-6') }}">
    {% embed '@Tabler/embeds/card.html.twig' with {
        title: form_card_title,
        use_footer: true,
    } %}
        {% block box_body %}
            {{ form_widget(form) }}
        {% endblock %}
        {% block box_footer %}
            <button class="btn btn-primary" type="submit">{{ form_submit_label|default('Enviar') }}</button>
            {% for link in form_actions %}
                {{ include('@Tabler/includes/action-button.html.twig', link) }}
            {% endfor %}
        {% endblock %}
    {% endembed %}
</div>
