{% extends '@Tabler/layout-horizontal.html.twig' %}

{% block page_title %}Demo application{% endblock %}
{% block page_pretitle %}{% endblock %}

{% block navbar_start %}
    {% if app.session.get('theme') == 'dark' %}
    <a href="{{ router.demo('light-mode') }}" class="nav-link px-0 me-2" title="" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Enable light mode">
        {{ tabler_icon('sun', true) }}
    </a>
    {% else %}
    <a href="{{ router.demo('dark-mode') }}" class="nav-link px-0 me-2" title="" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Enable dark mode">
        {{ tabler_icon('moon', true) }}
    </a>
    {% endif %}
    <div class="nav-item dropdown d-none d-md-flex me-2">
        <a href="#" class="nav-link px-0" data-bs-toggle="dropdown" tabindex="-1" aria-label="Choose a language" aria-expanded="false">
            {{ tabler_icon('fas fa-globe', true) }}
        </a>
        <div class="dropdown-menu dropdown-menu-end dropdown-menu-card" data-bs-popper="none">
            <div class="card">
                <div class="card-header text-nowrap">{{ 'Choose a language'|trans }}</div>
                {% for locale in locales() %}
                    <a class="dropdown-item" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({_locale: locale})) }}">
                        {{ locale|language(app.request.get('_locale')) }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {% if tabler_bundle.isRightToLeft() %}
        <link rel="stylesheet" href="{{ asset('bundles/tabler/tabler-rtl.css', 'tabler') }}">
    {% else %}
        <link rel="stylesheet" href="{{ asset('bundles/tabler/demo.css', 'tabler') }}">
    {% endif %}
    <link rel="stylesheet" href="{{ asset('bundles/tabler/font-awesome.css', 'tabler') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/tabler/font-awesome.js', 'tabler') }}"></script>
    <script src="{{ asset('bundles/tabler/tabler-dist.js', 'tabler') }}"></script>
{% endblock %}

{% block app_logo %}
    <h1 class="{% block navbar_brand_classes %}navbar-brand d-none-navbar-horizontal pe-0 pe-md-3 {% block navbar_brand_class %}navbar-brand-autodark{% endblock %}{% endblock %}">
        <a href="{{ path('tabler_welcome'|tabler_route) }}">
            <i class="far fa-smile" style="font-size: 32px"></i>
        </a>
    </h1>
{% endblock %}
